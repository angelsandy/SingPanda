<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>DaoUsuario</servlet-name>
        <servlet-class>Controlador.InicioSesion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DaoUsuario</servlet-name>
        <url-pattern>/DaoUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroDatos</servlet-name>
        <url-pattern>/RegistroDatos</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>DaoUsuarioRegistro</servlet-name>
        <servlet-class>Controlador.RegistroDatos</servlet-class>
    </servlet>
      <servlet-mapping>
        <servlet-name>DaoUsuarioRegistro</servlet-name>
        <url-pattern>/DaoUsuarioRegistro</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DaoPais</servlet-name>
        <servlet-class>Controlador.RegistroDatos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DaoPais</servlet-name>
        <url-pattern>/DaoPais</url-pattern>
    </servlet-mapping>     

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
    <welcome-file>register.jsp</welcome-file>
</welcome-file-list>
</web-app>
